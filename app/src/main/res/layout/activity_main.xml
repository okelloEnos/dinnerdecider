<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Dinner"
                                             android:background="@color/colorAccent">

    <TextView
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinesse"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/muli_extralight"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.361"
            android:id="@+id/selectedFoodTest"/>
    <ImageView
            android:layout_width="197dp"
            android:layout_height="124dp"
            android:src="@drawable/dd_logo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addfoodtxt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp"
            android:layout_marginTop="66dp"
            app:layout_constraintTop_toBottomOf="@+id/selectedFoodTest"
            android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/addfoodbtn"
            android:hint="Type Food Name"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="ADD FOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addfoodbtn"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/addfoodtxt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="62dp"
            app:layout_constraintBottom_toTopOf="@+id/decinebtn"/>
    <Button
            android:text="DECINE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decinebtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/addfoodbtn"
    app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>